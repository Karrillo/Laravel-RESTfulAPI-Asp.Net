@model Proyecto_Restful_Api.Models.Archive

@{
    ViewBag.Title = "Create";
}

@using (Html.BeginForm("create", "Archive", FormMethod.Post, new { enctype = "multipart/form-data" })) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Upload file</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <label class="control-label col-md-2">choose Text file </label>
            <div class="col-md-10">
                <input type="file" accept=".txt" id="uploadFile" name="uploadFile"/>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-success" />
            </div>
        </div>

    </div>
}
<div>
